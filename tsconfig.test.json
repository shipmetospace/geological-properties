{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "types": ["vitest/globals", "vitest", "node", "@testing-library/jest-dom"],
    "lib": ["ES2022", "DOM"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@testing/*": ["./src/testing/*"]
    }
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/testing/**/*",
    "__mocks__/**/*",
    "vite-env.d.ts"
  ]
}


